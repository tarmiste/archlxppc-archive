# $Id: PKGBUILD,v 1.2 2010/02/26 11:24:54 kth5 Exp $
# x86 Maintainer: Jason Chu <jason@archlinux.org>
# x86 Contributor: Tom Newsom <Jeepster@gmx.co.uk>
pkgname=libdv
pkgver=1.0.0
pkgrel=3
pkgdesc="The Quasar DV codec (libdv) is a software codec for DV video"
arch=('i686' 'x86_64' 'ppc')
url="http://libdv.sourceforge.net/"
license=('LGPL')
depends=('popt')
makedepends=('pkgconfig' 'gtk' 'libxv' 'xorg-headers')
optdepends=('gtk: for using playdv' 'libxv: for using playdv')
options=('!libtool')
source=(http://downloads.sourceforge.net/$pkgname/$pkgname-$pkgver.tar.gz)
md5sums=('f895162161cfa4bb4a94c070a7caa6c7')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  ./configure --prefix=/usr || return 1
  make || return 1
  make DESTDIR="$pkgdir" install || return 1
}
