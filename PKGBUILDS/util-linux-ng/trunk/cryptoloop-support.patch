+static char *
+usersubst(const char *opts) {
+	char *s, *w;
+	char id[40];
+
+	if (!opts)
+		return NULL;
+
+	s = "uid=useruid";
+	if (opts && (w = strstr(opts, s)) != NULL) {
+		sprintf(id, "uid=%d", getuid());
+		opts = subst_string(opts, w, strlen(s), id);
+	}
+	s = "gid=usergid";
+	if (opts && (w = strstr(opts, s)) != NULL) {
+		sprintf(id, "gid=%d", getgid());
+		opts = subst_string(opts, w, strlen(s), id);
+	}
+	return xstrdup(opts);
+}
