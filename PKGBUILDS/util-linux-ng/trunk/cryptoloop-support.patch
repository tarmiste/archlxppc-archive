+}
+
+char *progname;
+
+int
+main(int argc, char *argv[]) {
+	int c, result = 0, specseen;
+	char *options = NULL, *test_opts = NULL, *node;
+	const char *spec = NULL;
+	char *label = NULL;
+	char *uuid = NULL;
+	char *types = NULL;
+	char *p;
+	struct mntentchn *mc;
+	int fd;
+
+	sanitize_env();
+	setlocale(LC_ALL, "");
+	bindtextdomain(PACKAGE, LOCALEDIR);
+	textdomain(PACKAGE);
+
+	progname = argv[0];
+	if ((p = strrchr(progname, '/')) != NULL)
+		progname = p+1;
+
+	umask(022);
+
